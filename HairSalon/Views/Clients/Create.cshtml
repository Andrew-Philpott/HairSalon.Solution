@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<div class="header">
  <h1>Add a new client</h1>
</div>

<div class="create-form">
@using (Html.BeginForm())
{
  <p>@Html.LabelFor(model => model.Name) @Html.TextBoxFor(model => model.Name)</p>
  <p>@Html.Label("Stylist") @Html.DropDownList("StylistId")</p>
  <input type="submit" value="Add new client" class="btn btn-primary" />
}
</div>

<div class="links">
  <p>@Html.ActionLink("Show all clients", "Index")</p>
</div>