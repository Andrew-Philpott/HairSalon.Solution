@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Clients</h1>

  @if (@Model.Count == 0)
  {
    <h3>There are no clients yet</h3>
  } 
<div class="list">
  @foreach (Client client in Model)
  {
    <div class="client">
    <h4>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId })</h4>
    </div>
  }
</div>
<div class="links">
@if(@ViewBag.HasStylists != false) {
  <p>@Html.ActionLink("Add new client", "Create")</p>
}
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>


