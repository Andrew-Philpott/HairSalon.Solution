@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<div class="search">
  <h2>Search Clients</h2>
    <form action="/clients" method="Post" class="form-inline my-2 my-lg-0">
    <input
      class="form-control mr-sm-2"
      type="search"
      placeholder="Search"
      aria-label="Search"
    />
    <button class="btn btn-primary my-2 my-sm-0" type="submit">
      Search
    </button>
  </form>
</div>

<div class="links">
  @if(@ViewBag.HasStylists != false) {
    <p>@Html.ActionLink("Add new client", "Create")</p>
  }
    <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>

<div class="header">
  <h1>Clients</h1>
</div>

  @if (@Model.Count == 0)
  {
    <h3>There are no clients yet</h3>
  } 
<div class="list">
  @foreach (Client client in Model)
  {
    <div class="client">
    <h4>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId })</h4>
    </div>
  }
</div>