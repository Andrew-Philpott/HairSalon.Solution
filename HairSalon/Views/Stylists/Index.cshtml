@{ Layout = "_Layout"; } 
@using HairSalon.Models;
 @model IEnumerable<HairSalon.Models.Stylist>;
  
  <div class="search">
    <h2>Search Stylists</h2>
        <form class="form-inline my-2 my-lg-0">
        <input
          class="form-control mr-sm-2"
          type="search"
          placeholder="Search"
          aria-label="Search"
        />
        <button class="btn btn-primary my-2 my-sm-0" type="submit">
          Search
        </button>
      </form>
</div>

<div class="links">
    <p>@Html.ActionLink("Add Stylist", "Create")</p>
    <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>

<div class="header">
  <h1>Stylists</h1>
</div>

  @if (@Model.Any()) {
  <div class="list">
    @foreach (Stylist stylist in Model) {
    <div class="stylist">
      <h3>
        @Html.ActionLink($"{stylist.Name}", "Details", new { id =
        stylist.StylistId })
      </h3>
    </div>
    }
  </div>
  } else {
  <h3>No Stylists have been added yet!</h3>
  }

<p>@Html.ActionLink("Home", "Index", "Home")</p>
